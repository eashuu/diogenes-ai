# ===================================
# Diogenes Configuration Template
# ===================================
# Copy this file to .env and fill in your values
# Never commit .env with real credentials!

# ===================================
# Environment
# ===================================
DIOGENES_ENV=development  # development, production, or test

# ===================================
# Search Configuration (SearXNG)
# ===================================
DIOGENES_SEARCH_BASE_URL=http://localhost:8080
DIOGENES_SEARCH_TIMEOUT=20.0
DIOGENES_SEARCH_MAX_RESULTS=10
DIOGENES_SEARCH_LANGUAGE=en-US

# ===================================
# LLM Configuration (Ollama)
# ===================================
DIOGENES_LLM_PROVIDER=ollama
DIOGENES_LLM_BASE_URL=http://localhost:11434
DIOGENES_LLM_TEMPERATURE=0.0
DIOGENES_LLM_MAX_TOKENS=4096
DIOGENES_LLM_TIMEOUT=120.0

# LLM Models (use models available in your Ollama instance)
DIOGENES_LLM_MODEL_PLANNER=qwen2.5:3b
DIOGENES_LLM_MODEL_EXTRACTOR=qwen2.5:3b
DIOGENES_LLM_MODEL_SYNTHESIZER=llama3.1:8b
DIOGENES_LLM_MODEL_REFLECTOR=llama3.1:8b

# ===================================
# Web Crawling Configuration
# ===================================
DIOGENES_CRAWL_MAX_CONCURRENT=5
DIOGENES_CRAWL_TIMEOUT=30.0
DIOGENES_CRAWL_MAX_CONTENT_LENGTH=500000
DIOGENES_CRAWL_RATE_LIMIT_PER_DOMAIN=1.0
# Max URLs per batch crawl request (default: 50)
# DIOGENES_CRAWL_MAX_URLS_PER_REQUEST=50

# ===================================
# Processing Configuration
# ===================================
DIOGENES_PROCESSING_CHUNK_SIZE=512
DIOGENES_PROCESSING_CHUNK_OVERLAP=64
DIOGENES_PROCESSING_MAX_CHUNKS_PER_SOURCE=20
DIOGENES_PROCESSING_MAX_TOTAL_CONTEXT=32000

# ===================================
# Cache Configuration
# ===================================
DIOGENES_CACHE_PROVIDER=sqlite
DIOGENES_CACHE_DATABASE=data/cache.db

# ===================================
# Session Configuration
# ===================================
DIOGENES_SESSION_PROVIDER=sqlite
DIOGENES_SESSION_DATABASE=data/sessions.db
DIOGENES_SESSION_TTL=86400

# ===================================
# Agent Configuration
# ===================================
DIOGENES_AGENT_MAX_ITERATIONS=3
DIOGENES_AGENT_MIN_SOURCES=3
DIOGENES_AGENT_MAX_SOURCES=8
DIOGENES_AGENT_COVERAGE_THRESHOLD=0.7

# ===================================
# API Configuration
# ===================================
DIOGENES_API_HOST=127.0.0.1  # Localhost-only (recommended). Use 0.0.0.0 for LAN access.
DIOGENES_API_PORT=8000
DIOGENES_API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000
DIOGENES_API_DEBUG=false

# Optional API key protection (recommended if binding to 0.0.0.0)
# All endpoints except /health and /docs will require X-API-Key header.
DIOGENES_API_REQUIRE_API_KEY=false
DIOGENES_API_API_KEY=

# Number of Uvicorn workers (default: 1)
# DIOGENES_WORKERS=1

# Max concurrent research sessions (default: 2)
# DIOGENES_API_MAX_CONCURRENT_RESEARCH=2

# ===================================
# Logging Configuration
# ===================================
DIOGENES_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
DIOGENES_LOG_FORMAT=%(asctime)s | %(levelname)-8s | %(name)s | %(message)s
# DIOGENES_LOG_FILE=logs/diogenes.log  # Optional: uncomment to enable file logging

# ===================================
# Optional: Alternative LLM Providers
# ===================================
# If using OpenAI, Anthropic, or other cloud providers:
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# ===================================
# Optional: Database Configuration
# ===================================
# If using PostgreSQL instead of SQLite:
# DATABASE_URL=postgresql://user:password@localhost:5432/diogenes

# ===================================
# Optional: Redis for Caching
# ===================================
# If using Redis instead of SQLite for caching:
# REDIS_URL=redis://localhost:6379/0
